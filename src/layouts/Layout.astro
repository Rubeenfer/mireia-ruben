---
import "../styles/globals.css";
import { translations } from "../i18n/translations";

export interface Props {
  title: string;
  lang?: "es" | "ca" | "en";
}
const { title, lang = "es" }: Props = Astro.props;
const t = translations[lang];
---

<!doctype html>
<html lang={lang} class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Mireia and Rubén's Wedding Website" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" href="/favicon.ico" type="image/x-icon" />
    <meta name="generator" content={Astro.generator} />
    <meta name="robots" content="noindex, nofollow" />
    <!--   META Tags -->
    <meta property="og:title" content="Mireia & Rubén" />
    <meta property="og:type" content="website" />
    <meta
      property="og:image"
      content="https://mireiaruben.com/images/our_story.jpg"
    />
    <meta property="og:url" content="http:/mireiaruben.com" />
    <meta property="og:description" content="Mireia and Rubén's Website" />
    <meta property="og:site_name" content="Mireia & Rubén" />
    <title>{title}</title>
  </head>
  <body
    class="bg-cream font-sans text-gray-800 transition-colors duration-300 dark:bg-gray-900 dark:text-gray-100"
  >
    <slot />
  </body>
</html>
