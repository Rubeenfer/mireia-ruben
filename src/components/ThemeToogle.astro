<label class="switch">
  <input id="switch" type="checkbox" />
  <span class="slider">
    <svg class="icon" viewBox="0 0 24 24">
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z"
      >
      </path>
    </svg>
  </span>
</label>

<style>
  .icon {
    @apply absolute bottom-1 left-1 h-6 w-6 fill-none stroke-dark duration-300;
  }

  input:checked + .slider > .icon {
    @apply translate-x-7;
  }

  .switch {
    @apply relative h-8 w-16;
  }

  .switch input {
    @apply h-0 w-0 opacity-0;
  }

  .slider {
    @apply bg-leaf dark:bg-sky absolute bottom-0 left-0 right-0 top-0 cursor-pointer rounded-full duration-300;
  }

  .slider:before {
    @apply bg-cream absolute bottom-1 left-1 h-6 w-6 rounded-full duration-300 content-[""];
  }

  input:checked + .slider:before {
    @apply translate-x-7;
  }
</style>

<script>
  function switchTheme() {
    document.documentElement.classList.toggle("dark");
    const isDark = document.documentElement.classList.contains("dark");
    localStorage.setItem("darkMode", String(isDark));
  }

  document.addEventListener("DOMContentLoaded", () => {
    const darkMode = localStorage.getItem("darkMode") === "true";
    if (darkMode) document.documentElement.classList.add("dark");
    const themeSwitch = document.getElementById("switch");

    console.log(themeSwitch);
    if (themeSwitch) themeSwitch.addEventListener("click", switchTheme);
  });
</script>
