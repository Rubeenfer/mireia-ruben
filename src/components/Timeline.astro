---
import { translations } from "../i18n/translations";
import {
  AppetizerIcon,
  CeremonyIcon,
  LunchIcon,
  PartyIcon,
} from "../icons/index.ts";

const { lang = "es" }: { lang?: "es" | "ca" | "en" } = Astro.props;
const t = translations[lang];
---

<div class="card">
  <div class="line"></div>
  <ul class="list">
    <li class="list-element">
      <span class="time text-kalam">{t.schedule.ceremony.time}</span>
      <div class="icon-container">
        <CeremonyIcon className="h-7 w-7 fill-black dark:fill-white" />
      </div>
      <span class="event text-kalam">
        {t.schedule.ceremony.text}
      </span>
    </li>
    <li class="list-element">
      <span class="time text-kalam">{t.schedule.appetizer.time}</span>
      <div class="icon-container">
        <AppetizerIcon className="h-7 w-7 fill-black dark:fill-white" />
      </div>
      <span class="event text-kalam">{t.schedule.appetizer.text}</span>
    </li>
    <li class="list-element">
      <span class="time text-kalam">{t.schedule.lunch.time}</span>
      <div class="icon-container">
        <LunchIcon className="h-7 w-7 fill-black dark:fill-white" />
      </div>
      <span class="event text-kalam">{t.schedule.lunch.text}</span>
    </li>
    <li class="list-element">
      <span class="time text-kalam">{t.schedule.party.time}</span>
      <div class="icon-container">
        <PartyIcon className="h-7 w-7 fill-black dark:fill-white" />
      </div>
      <span class="event text-kalam">{t.schedule.party.text}</span>
    </li>
  </ul>
</div>

<style>
  .card {
    @apply relative flex items-center justify-center pt-4 text-center;
    @apply rounded-md md:aspect-square md:w-64 lg:w-80;
  }
  .line {
    @apply absolute bottom-8 left-1/2 top-16 w-[1px] bg-dark;
    @apply dark:bg-cream;
  }
  .list {
    @apply space-y-10;
  }
  .list-element {
    @apply mx-auto flex w-64 items-center justify-around;
  }
  .time {
    @apply mt-2 w-1/3 text-right text-dark sm:text-left;
    @apply dark:text-cream;
  }
  .icon-container {
    @apply z-10 flex w-1/3 items-center justify-center bg-olive p-1 dark:bg-dark;
  }
  .event {
    @apply mt-2 w-1/3 text-left text-dark sm:text-right;
    @apply dark:text-cream;
  }
</style>
