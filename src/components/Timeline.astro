---
import { translations } from "../i18n/translations";
import {
  AppetizerIcon,
  CeremonyIcon,
  LunchIcon,
  PartyIcon,
} from "../icons/index.ts";

const { lang = "es" }: { lang?: "es" | "ca" | "en" } = Astro.props;
const t = translations[lang];
---

<div class="card">
  <div class="line"></div>
  <ul class="list">
    <li class="list-element">
      <span class="time">13:00</span>
      <div class="icon-container">
        <CeremonyIcon className="h-7 w-7 fill-black dark:fill-white" />
      </div>
      <span class="event">
        {t.schedule.ceremony}
      </span>
    </li>
    <li class="list-element">
      <span class="time">14:00</span>
      <div class="icon-container">
        <AppetizerIcon className="h-7 w-7 fill-black dark:fill-white" />
      </div>
      <span class="event">{t.schedule.appetizer}</span>
    </li>
    <li class="list-element">
      <span class="time">17:00</span>
      <div class="icon-container">
        <LunchIcon className="h-7 w-7 fill-black dark:fill-white" />
      </div>
      <span class="event">{t.schedule.lunch}</span>
    </li>
    <li class="list-element">
      <span class="time">20:00</span>
      <div class="icon-container">
        <PartyIcon className="h-7 w-7 fill-black dark:fill-white" />
      </div>
      <span class="event">{t.schedule.party}</span>
    </li>
  </ul>
</div>

<style>
  .card {
    @apply bg-olive rounded-lg p-6 text-center shadow-lg;
    @apply dark:bg-sky;
    @apply relative flex items-center justify-center p-6;
    @apply aspect-square w-3/5 rounded-md shadow-md;
  }
  .line {
    @apply absolute bottom-8 left-1/2 top-8 w-[1px] bg-dark;
    @apply dark:bg-cream;
  }
  .list {
    @apply space-y-6;
  }
  .list-element {
    @apply mx-auto flex w-64 items-center justify-around;
  }
  .time {
    @apply w-1/3 text-left text-dark;
    @apply dark:text-cream;
  }
  .icon-container {
    @apply bg-olive z-10 flex w-1/3 items-center justify-center p-1;
    @apply dark:bg-sky;
  }
  .event {
    @apply w-1/3 text-right text-dark;
    @apply dark:text-cream;
  }
</style>
