---
import { translations } from "../i18n/translations";
import CountdownTimer from "../components/CountdownTimer";

const { lang = "es" }: { lang?: "es" | "ca" | "en" } = Astro.props;
const t = translations[lang];
---

<section class="section">
  <div class="background-blur"></div>
  <h1 class="heading-1">Mireia & Rub√©n</h1>
  <div class="box">
    <p class="date">{t.hero.date}</p>
    <p class="location">
      {t.hero.location}
    </p>
    <CountdownTimer
      client:load
      translations={t.countdown}
      styles="text-cream"
    />
  </div>
</section>

<style>
  .section {
    @apply relative flex min-h-dvh flex-col items-center justify-end bg-hero bg-cover bg-top;
    @apply bg-fixed bg-no-repeat dark:bg-darkHero dark:bg-cover dark:bg-bottom;
    background: -moz-linear-gradient(top, #00000000, #86895d4d),
      url("/images/farinera_day.jpg"); /* FF3.6+ */
    background: -webkit-gradient(
      linear,
      left top,
      left bottom,
      color-stop(0%, rgba(0, 0, 0, 0)),
      color-stop(100%, rgba(134, 137, 93, 0.302)),
      url("/images/farinera_day.jpg")
    ); /* Chrome,Safari4+ */
    background: -webkit-linear-gradient(
      top,
      rgba(0, 0, 0, 0) 0%,
      rgba(134, 137, 93, 0.302) 100%,
      url("/images/farinera_day.jpg")
    ); /* Chrome10+,Safari5.1+ */
    background: -o-linear-gradient(
      top,
      rgba(0, 0, 0, 0) 0%,
      rgba(134, 137, 93, 0.302) 100%,
      url("/images/farinera_day.jpg")
    ); /* Opera 11.10+ */
    background: -ms-linear-gradient(
      top,
      rgba(0, 0, 0, 0) 0%,
      rgba(134, 137, 93, 0.302) 100%,
      url("/images/farinera_day.jpg")
    ); /* IE10+ */
  }
  .background-blur {
    @apply absolute inset-0 z-0 bg-dark opacity-20;
  }

  .box {
    @apply z-10 w-full rounded-lg bg-dark bg-opacity-30 p-8 text-center text-cream backdrop-blur-sm sm:mb-16 sm:w-auto;
  }
  .date {
    @apply mb-2 text-sm font-light sm:text-base;
  }
  .location {
    @apply mb-8 text-lg font-light sm:text-xl;
  }
</style>
